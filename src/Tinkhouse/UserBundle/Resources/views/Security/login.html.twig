{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error|trans }}</div>
{% endif %}

    <div class="box-fos-content box-fos-signin">

        <div class="fos_user-login-box">

            <div class="fos_user-login-box-header">
                <h2> TinkHouse identification </h2>
            </div>

            <div class="fos_user-login-box-content">

                <form action="{{ path("fos_user_security_check") }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                    <label for="username" class="login_label">{{ 'security.login.username'|trans }}</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="login"/>

                    <label for="password" class="login_label">{{ 'security.login.password'|trans }}</label>
                    <input type="password" id="password" name="_password" required="required" class="login" />

                    {#<div class="box-form">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    </div>#}

                    <div>
                        <input type="submit" id="_submit" class="blue large" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                    </div>

                </form>


            </div>

            <div class="fos_user-register-box-footer"></div>

        </div>
    </div>


{% endblock fos_user_content %}
