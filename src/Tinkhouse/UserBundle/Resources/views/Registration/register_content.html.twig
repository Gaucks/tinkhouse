{% trans_default_domain 'FOSUserBundle' %}

<div class="box-fos-content box-fos-content-register">

    <div class="fos_user-register-box">

        <div class="fos_user-register-box-header">
            <h3>Formulaire d'inscription </h3>
        </div>

        <div class="fos_user-register-box-content">

            <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">

                <div class="error">
                    {{ form_errors(form.email) }}
                    {{ form_errors(form.username) }}
                    {{ form_errors(form.plainPassword.first) }}
                    {{ form_errors(form.plainPassword.second) }}
                </div>

                <div class="register-box">
                    {{ form_label(form.email, 'Adresse email:', {'label_attr': {'class':'label'}}) }}
                    {{ form_widget(form.email) }}
                </div>
                <div class="register-box">
                    {{ form_label(form.username, 'Nom d\'utilisateur:', {'label_attr': {'class':'label'}}) }}
                    {{ form_widget(form.username) }}
                </div>
                <div class="register-box">
                    {{ form_label(form.plainPassword.first, NULL, {'label_attr': {'class':'label'}}) }}
                    {{ form_widget(form.plainPassword.first) }}
                </div>
                <div class="register-box">
                    {{ form_label(form.plainPassword.second, NULL, {'label_attr': {'class':'label'}}) }}
                    {{ form_widget(form.plainPassword.second) }}
                </div>
                <div class="register-box">
                    {{ form_label(form.usertype, NULL, {'label_attr': {'class':'label'}}) }}
                    {{ form_widget(form.usertype) }}
                </div>
                {{ form_rest(form) }}

                <div class="register-box">
                    <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-register" />
                </div>
            </form>

        </div>

        <div class="fos_user-register-box-footer"></div>

    </div>
 </div>